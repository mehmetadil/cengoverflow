	<span class="sil"><i class="fa fa-trash-o"></i><%= link_to "Sil", answer, method: :delete, data: {confirm: "Emin misin?"}, class: "sil" %></span>
	<% end %>
  		</div>
  		
  		<div class="col-md-5">
  			<span class="help-block"><i class="fa fa-clock-o"></i> <b><%= link_to time_ago_in_words(answer.created_at), answer, style: "color:inherit; text-decoration:none;" %> <br> 
