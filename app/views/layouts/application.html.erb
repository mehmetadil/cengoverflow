<!DOCTYPE html>
<html>
<head>
  <title>CengOverFlow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <div class="navbar-brand"><i class="fa fa-stack-overflow"></i> <%= link_to "CengOverFlow", root_path, style: "text-decoration:none;color:inherit" %>
        </div>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Soru Ara</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <% if user_signed_in? %>
              <%= image_tag current_user.profile.avatar(:thumb) , height: '40', width: '50' %>
              <%= current_user.profile.full_name %>
            <% else %>  
              "Misafir Kullanıcı"
            <% end  %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if user_signed_in? %>
                <li><%= link_to "Profilim", profile_path(current_user.profile) %></li>
                <li><%= link_to "Çıkış Yap", logout_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "Giriş Yap", login_path %></li>
                <li><%= link_to "Kayıt Ol", new_user_registration_path %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
          <% elsif alert %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="col-md-3">

      <div class="panel panel-default">
        <div class="panel-heading"><h3>Hızlı Erişim</h3></div>
        <div class="panel-body">
          <ul>
              <li><h4><%= link_to "Questions" , root_path  %></h4>
              <li><h4><%= link_to "Tags" ,  tags_path %></h4> </li>
              <li><h4><%= link_to "Users" , users_index_path  %></h4>
              <li><h4><%= link_to "Answers" , answers_path  %></h4>
              </li>
          </ul>    
        </div>
      </div>
    </div> 
  </div>
</div>
</body>
</html>


